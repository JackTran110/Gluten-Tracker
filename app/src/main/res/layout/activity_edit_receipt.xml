        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deductibleViewEdit"
        android:text="Deductible: $"

        android:layout_below="@+id/plusButtonEdit" />
 <!--   <Button
        android:layout_width="wrap_content"
