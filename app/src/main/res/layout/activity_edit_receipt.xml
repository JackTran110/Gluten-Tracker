        android:layout_height="wrap_content"
        android:id="@+id/deductibleTextEdit"
        android:layout_below="@+id/minusButtonEdit"
        android:layout_toRightOf="@+id/deductibleViewEdit"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"

